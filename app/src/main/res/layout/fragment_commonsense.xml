<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.CommonsenseFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/fragment_margin_20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/fragment_margin_20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/fragment_margin_20"/>


    <TextView
        android:id="@+id/commonsense_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commonsense_main_tv"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_end"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintTop_toTopOf="@+id/gl_top"/>


    <HorizontalScrollView
        android:id="@+id/chip_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/gl_end"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/commonsense_main_tv">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="10dp"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true"
            app:checkedChip="@id/fist_type">

            <com.google.android.material.chip.Chip
                android:id="@+id/fist_type"
                style="@style/Widget.jikimi.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commonsense_chip_first"
                app:chipIconEnabled="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/second_type"
                style="@style/Widget.jikimi.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commonsense_chip_second"
                app:chipIconEnabled="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/three_type"
                style="@style/Widget.jikimi.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commonsense_chip_three"
                app:chipIconEnabled="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/four_type"
                style="@style/Widget.jikimi.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commonsense_chip_four"
                app:chipIconEnabled="true" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commonsense_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/chip_scroll"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintEnd_toEndOf="@+id/gl_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        app:spanCount="2"
        tools:listitem="@layout/commonsense_item"/>



</androidx.constraintlayout.widget.ConstraintLayout>